<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
   android:background="@color/white"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/black1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="28th July, 2018"
            android:textSize="12sp"
            android:fontFamily="@font/gotham_boook"
            android:padding="8dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="10:30 a.m"
            android:fontFamily="@font/montserrat_medium1"
            android:textSize="12sp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="Order no. 123"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:scaleY=".5"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="2dp"
        android:background="@drawable/gradient_bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"

        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/wagonr_logo"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
              android:paddingLeft="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/gotham_boook"
                android:textColor="@color/app_caption_dark_grey"
                android:text="Wagonar R"
               android:layout_marginTop="8dp"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:padding="8dp"
            android:fontFamily="@font/montserrat_medium1"
            android:textColor="@color/black1"
            android:text="DL1PB3201"
            android:layout_weight="1"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:scaleY=".5"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="2dp"
        android:background="@drawable/gradient_bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:paddingBottom="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/black1"
                android:text="Customer Details"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="8sp"
                android:paddingLeft="4dp"
                android:layout_marginTop="-2dp"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/black1"
                android:text="(Pickup)"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="Name of the customer"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:layout_marginLeft="32dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="complete Address of customer"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:layout_marginLeft="32dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content" />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:scaleY=".5"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="2dp"
        android:background="@drawable/gradient_bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:paddingBottom="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/black1"
                android:text="Partner Details"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="8sp"
                android:paddingLeft="4dp"
                android:layout_marginTop="-2dp"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/black1"
                android:text="(Drop)"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="Name of the partner"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:layout_marginLeft="32dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="complete Address of partner"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:layout_marginLeft="32dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content" />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:scaleY=".5"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="2dp"
        android:background="@drawable/gradient_bottom"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_02"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:id="@+id/tvRuppee"
            android:text="99"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/chart_deep_red"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

    </FrameLayout>







</LinearLayout>