                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:id="@+id/linear_paint"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/frame_rect_offwhite"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="left"
                        android:textColor="@color/app_grey_headline_caption"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginLeft="16dp"
                        android:text="Interior cleaning"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/checked_svg"
                        android:padding="16dp"
                        android:layout_height="48dp" />



                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/frame_rect"
                    android:layout_marginTop="2dp"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="left"
                        android:textColor="@color/app_grey_headline_caption"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginLeft="16dp"
                        android:text="Exterior cleaning"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/checked_svg"
                        android:padding="16dp"
                        android:layout_height="48dp" />



                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/frame_rect_offwhite"
                    android:layout_marginTop="2dp"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="left"
                        android:textColor="@color/app_grey_headline_caption"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginLeft="16dp"
                        android:text="Dashboard cleaning"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/checked_svg"
                        android:padding="16dp"
                        android:layout_height="48dp" />



                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/frame_rect"
                    android:layout_marginTop="2dp"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="left"
                        android:textColor="@color/app_grey_headline_caption"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginLeft="16dp"
                        android:text="@string/rubbing"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/checked_svg"
                        android:padding="16dp"
                        android:layout_height="48dp" />


                </FrameLayout>


            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="left"
                android:textColor="@color/app_grey_headline_caption"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginLeft="8dp"
                android:text="Partner details"
                android:layout_height="wrap_content" />


            <FrameLayout
