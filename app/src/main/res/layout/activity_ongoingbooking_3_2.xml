                    android:layout_gravity="right"
                    android:textColor="@color/chart_deep_red"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginRight="12dp"
                    android:text="Details"
                    android:layout_height="wrap_content" />




            </FrameLayout>


            <LinearLayout
