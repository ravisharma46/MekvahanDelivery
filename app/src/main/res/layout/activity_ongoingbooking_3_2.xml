                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/app_grey_headline_caption"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginLeft="24dp"
                    android:text="Name"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium1"
                    android:layout_marginLeft="24dp"
                    android:text="Name of the partner"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:scaleY=".5"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="2dp"
                    android:background="@drawable/gradient_bottom"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/app_grey_headline_caption"
                    android:layout_marginTop="88dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginLeft="24dp"
                    android:text="Address"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="116dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/montserrat_medium1"
                    android:layout_marginLeft="24dp"
                    android:text="Address of the partner"
                    android:layout_height="wrap_content" />




                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/call"
                    android:layout_gravity="right"
                    android:padding="16dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/mobile_svg"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/app_grey_headline_caption"
                    android:layout_marginTop="44dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Call"
                    android:layout_height="wrap_content" />





            </FrameLayout>





            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="left"
                android:textColor="@color/app_grey_headline_caption"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginLeft="8dp"
                android:text="@string/drop_date"
                android:layout_height="wrap_content" />



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:layout_height="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/date"
                    android:text="Tuesday, 25th Aug"
                    android:padding="16dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="11:30 a.m"
                    android:id="@+id/time"
                    android:padding="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="right"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium1"
                    android:layout_height="wrap_content" />


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:weightSum="3"
                android:background="@drawable/frame_rect"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/app_divider_list"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1.2 km"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat_medium1"
                        android:layout_height="wrap_content" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:background="@color/app_divider_list"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/_15_min_approx"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat_medium1"
                        android:layout_height="wrap_content" />

                </FrameLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal"
                    android:background="@color/orange"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="16dp"
                        android:src="@drawable/ic_navigation"
                        android:layout_height="16dp" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/navigate"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/montserrat_medium1"
                        android:layout_height="wrap_content" />

                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:weightSum="2"
                android:layout_height="40dp">

                <Button
                    android:layout_width="wrap_content"
                    android:text="View Customer Report"
                    android:layout_weight="1"

                    android:background="@drawable/grey_button"
                    android:textAllCaps="false"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/montserrat_medium1"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_qr_code"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:layout_height="40dp" />



            </LinearLayout>





            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="left"
                android:textColor="@color/app_grey_headline_caption"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_medium1"
                android:layout_marginLeft="8dp"
                android:text="Vehicle condition at pickup time"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/frame_rect_02"
                android:layout_height="152dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/frame_sqr"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/image_svg"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_height="80dp" />

                        </FrameLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/frame_sqr"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/image_svg"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_height="80dp" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/frame_sqr"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/image_svg"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_height="80dp" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/frame_sqr"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/image_svg"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_height="80dp" />

                        </FrameLayout>







                    </LinearLayout>


                </HorizontalScrollView>





            </FrameLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
