<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaction_history.transaction_1">


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <FrameLayout
            android:layout_width="wrap_content"
            android:id="@+id/frame_1"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:background="@color/chart_deep_red"
            android:layout_height="45dp">
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/bike_image"
                android:src="@drawable/bike_white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Bike"
                android:id="@+id/tvbike"
                android:fontFamily="@font/montserrat_medium1"
                android:layout_marginTop="12dp"
                android:layout_marginRight="40dp"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:id="@+id/frame_2"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_height="45dp">
            <ImageView
                android:layout_width="60dp"
                android:id="@+id/car_image"
                android:src="@drawable/carblack"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Car"
                android:id="@+id/tvcar"
                android:fontFamily="@font/montserrat_medium1"
                android:layout_marginTop="12dp"
                android:layout_marginRight="40dp"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="12dp"
                android:background="@color/chart_deep_red"
                android:layout_gravity="right"
                android:layout_height="match_parent" />


        </FrameLayout>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>




</LinearLayout>



</ScrollView>