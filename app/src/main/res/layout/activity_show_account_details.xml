<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="wrap_content"
    tools:context=".user_profile.show_account_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="PAN Number"
                android:layout_marginTop="20dp"
                android:textSize="8sp"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/app_caption_dark_grey"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="DPNPK3106Q"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:scaleY=".5"
            android:layout_marginTop="8dp"
            android:layout_height="2dp"
            android:background="@drawable/gradient_bottom"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Account Number"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:textSize="8sp"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/app_caption_dark_grey"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="3612 3456 5323"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_medium1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/visa_dummy"
                        android:layout_height="24dp" />
                </FrameLayout>



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:scaleY=".5"
            android:layout_marginTop="8dp"
            android:layout_height="2dp"
            android:background="@drawable/gradient_bottom"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="IFSC code"
                android:layout_marginTop="20dp"
                android:textSize="8sp"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/app_caption_dark_grey"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="PUNB0013000"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:scaleY=".5"
            android:layout_marginTop="8dp"
            android:layout_height="2dp"
            android:background="@drawable/gradient_bottom"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Cancelled check"
                android:layout_marginTop="20dp"
                android:textSize="8sp"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/app_caption_dark_grey"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="SBIN0011361"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_medium1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:scaleY=".5"
            android:layout_marginTop="8dp"
            android:layout_height="2dp"
            android:background="@drawable/gradient_bottom"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Attach file"
                    android:layout_marginTop="20dp"
                    android:textSize="8sp"
                    android:fontFamily="@font/montserrat_medium1"
                    android:textColor="@color/app_caption_dark_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="filename.jpeg"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="remove"
                    android:textSize="10sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/chart_deep_red"
                    android:layout_height="wrap_content" />



                <ImageView
                    android:layout_width="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/attachment_dummy"
                    android:layout_height="12dp" />

            </LinearLayout>









        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:scaleY=".5"
            android:layout_marginTop="8dp"
            android:layout_height="2dp"
            android:background="@drawable/gradient_bottom"/>


    </LinearLayout>





    <Button
        android:layout_width="match_parent"
        android:id="@+id/bt_ok"
        android:background="@drawable/done_red_button"
        android:text="Save Details"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/montserrat_medium1"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_height="40dp" />

</RelativeLayout>
